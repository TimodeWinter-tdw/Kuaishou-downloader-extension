{
    "manifest_version": 2,
  
    "name": "Kuaishou downloader by 20423",
    "description": "Use this extension to download kuaishou videos. Extension made by 20423.",
    "version": "2.1",
  
    "browser_action": {
      "default_icon": "icons/icon.png",
      "default_popup": "content/popup.html"
    },
    "permissions": [
      "activeTab",
      "tabs",
      "downloads",
      "http://*/*",
      "https://*/*",
      "nativeMessaging"
    ],
    
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
    
    
  }